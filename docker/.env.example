# Sekha Configuration - Copy this to .env and customize

# ==============================================
# API Keys (REQUIRED - Generate secure keys!)
# ==============================================
# Generate with PowerShell:
#   $MCP_KEY = -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 32 | ForEach-Object {[char]$_})
#   $REST_KEY = -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 32 | ForEach-Object {[char]$_})
#   Write-Output "MCP_API_KEY=$MCP_KEY"
#   Write-Output "REST_API_KEY=$REST_KEY"

MCP_API_KEY=CHANGE_ME_32_CHARS_MINIMUM_REQUIRED
REST_API_KEY=CHANGE_ME_32_CHARS_MINIMUM_REQUIRED

# ==============================================
# Service URLs
# ==============================================
# Ollama LLM URL
# - Windows/Mac: use host.docker.internal:11434
# - Linux: use 172.17.0.1:11434 or host IP
OLLAMA_URL=http://host.docker.internal:11434

# ChromaDB URL (internal docker network)
CHROMA_URL=http://chroma:8000

# Controller URL (internal docker network)
CONTROLLER_URL=http://controller:8080

# ==============================================
# Ports (Change if conflicts exist)
# ==============================================
CONTROLLER_PORT=8080
PROXY_PORT=8081
CHROMA_PORT=8000

# ==============================================
# LLM Models
# ==============================================
EMBEDDING_MODEL=nomic-embed-text:latest
SUMMARIZATION_MODEL=llama3.1:8b

# ==============================================
# Database & Storage
# ==============================================
DATABASE_URL=sqlite:///data/sekha.db
CHROMA_PERSIST_PATH=./chroma_data

# ==============================================
# Features
# ==============================================
SUMMARIZATION_ENABLED=true
PRUNING_ENABLED=true
AUTO_INJECT_CONTEXT=true

# ==============================================
# Memory Configuration
# ==============================================
CONTEXT_TOKEN_BUDGET=4000
DEFAULT_FOLDER=/conversations
EXCLUDED_FOLDERS=

# ==============================================
# Advanced Settings
# ==============================================
LOG_LEVEL=info
CORS_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
MAX_CONNECTIONS=10

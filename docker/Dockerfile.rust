# docker/Dockerfile.rust - COMPLETE REPLACEMENT
# Multi-stage build: ~30MB final size

# Stage 1: Builder
FROM rust:1.84-slim AS builder

WORKDIR /app

# Install build dependencies only
RUN apt-get update && apt-get install -y \
    libpq-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Copy manifests first for better layer caching
COPY Cargo.toml Cargo.lock ./
COPY migration ./migration
COPY migrations ./migrations

# Copy source code
COPY src ./src

# Build release binary
RUN cargo build --release --bin sekha-controller

# Stage 2: Runtime - Use distroless for minimal attack surface
FROM gcr.io/distroless/cc-debian12:nonroot

# Copy the binary from builder
COPY --from=builder --chown=nonroot:nonroot /app/target/release/sekha-controller /usr/local/bin/

# Copy CA certificates for HTTPS calls to Ollama/Chroma
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/

# Use nonroot user (security best practice)
USER nonroot:nonroot

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
    CMD ["/usr/local/bin/sekha-controller", "--health-check"] || exit 1

# Run the binary directly (no shell)
ENTRYPOINT ["/usr/local/bin/sekha-controller"]